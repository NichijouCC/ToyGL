{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "esNext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "declarationDir": "../exampesDist/types",
    "outDir": "../exampesDist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "TOYGL": [
        "../src/index.ts"
      ]
    }
  },
  "include": [
    "../src/*.d.ts",
    "./*.ts",
    "src/bass.ts",
    "src/main.ts",
    "src/loadGltf.ts"
  ],
}